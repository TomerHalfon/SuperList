# Test Environment Configuration Template
# Copy this file to .env.test.local and fill in your test Supabase credentials

# Test Supabase Configuration
# Create a separate Supabase project for testing to avoid polluting dev data
NEXT_PUBLIC_SUPABASE_URL=your-test-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-test-supabase-anon-key
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Test User Credentials
# Create test users in your test Supabase project
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
TEST_USER_2_EMAIL=test2@example.com
TEST_USER_2_PASSWORD=testpassword123

# Storage Configuration for Tests
# Always use Supabase for E2E tests to test real database interactions
STORAGE_TYPE=supabase

# Test Data Configuration
TEST_DATA_CLEANUP=true
TEST_DATA_PREFIX=e2e_test_
